<tool id="mzIdentMLToJSON" name="mzIdentMLToJSON" version="1.0.0">
  <description>visualise Protein, Peptide and PSM </description>
  <command interpreter="python">
    mzIdentMLToJSON.py  --filename="$input" --datasetid=$__app__.security.encode_id($input.id) --root=$__root_dir__
  </command>
  <inputs>
    <param format="mzid" name="input" type="data" label="Source file(mzIdentML)"/>
  </inputs>
  <outputs>
    <data format="txt" name="output_dataset" />
  </outputs>
  <help>
    This tool extracts proteomics data from mzIdentML file and generates temporary JSON files to speed up data loading of MzIdentML Viewer visualisation plugin.
  </help>
</tool>